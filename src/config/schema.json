{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/AppConfig",
  "definitions": {
    "AppConfig": {
      "type": "object",
      "properties": {
        "$schema": {
          "type": "string"
        },
        "env": {
          "type": "string"
        },
        "server": {
          "$ref": "#/definitions/ServerConfig"
        },
        "auth": {
          "$ref": "#/definitions/AuthConfig"
        },
        "persistence": {
          "$ref": "#/definitions/PersistenceConfig"
        },
        "api": {
          "$ref": "#/definitions/APIConfig"
        },
        "i18n": {
          "type": "object",
          "properties": {
            "defaultLocale": {
              "$ref": "#/definitions/AppLocale"
            },
            "locales": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/AppLocale"
              }
            }
          },
          "required": [
            "defaultLocale",
            "locales"
          ],
          "additionalProperties": false
        },
        "queue": {
          "$ref": "#/definitions/QueueConfig"
        },
        "sync": {
          "$ref": "#/definitions/SyncConfig"
        },
        "search": {
          "$ref": "#/definitions/SearchConfig"
        },
        "services": {
          "type": "object",
          "properties": {
            "twilio": {
              "$ref": "#/definitions/TwilioConfig"
            }
          },
          "required": [
            "twilio"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "env",
        "server",
        "auth",
        "persistence",
        "api",
        "i18n",
        "queue",
        "sync",
        "search",
        "services"
      ],
      "additionalProperties": false
    },
    "ServerConfig": {
      "type": "object",
      "properties": {
        "port": {
          "type": "number"
        }
      },
      "required": [
        "port"
      ],
      "additionalProperties": false
    },
    "AuthConfig": {
      "type": "object",
      "properties": {
        "driver": {
          "type": "string",
          "const": "native"
        },
        "config": {
          "$ref": "#/definitions/NativeAuthDriverConfig"
        }
      },
      "required": [
        "driver",
        "config"
      ],
      "additionalProperties": false
    },
    "NativeAuthDriverConfig": {
      "type": "object",
      "properties": {
        "hashSaltLevel": {
          "type": "number"
        },
        "sessionTTL": {
          "type": "number"
        },
        "activeRefreshTokenSecret": {
          "type": "string"
        },
        "deprecatedRefreshTokenSecrets": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "refreshTokenTTL": {
          "type": "number"
        },
        "passwordRegex": {
          "type": "string"
        }
      },
      "required": [
        "hashSaltLevel",
        "sessionTTL",
        "activeRefreshTokenSecret",
        "deprecatedRefreshTokenSecrets",
        "refreshTokenTTL",
        "passwordRegex"
      ],
      "additionalProperties": false
    },
    "PersistenceConfig": {
      "type": "object",
      "properties": {
        "driver": {
          "type": "string",
          "const": "dynamodb"
        },
        "config": {
          "$ref": "#/definitions/DynamoDBConfig"
        },
        "constants": {
          "type": "object",
          "properties": {
            "lockTimeout": {
              "type": "number"
            },
            "lockObtainerTimeout": {
              "type": "number"
            },
            "lockAttemptInterval": {
              "type": "number"
            },
            "lookupsTTL": {
              "type": "number"
            }
          },
          "required": [
            "lockTimeout",
            "lockObtainerTimeout",
            "lockAttemptInterval",
            "lookupsTTL"
          ],
          "additionalProperties": false
        },
        "cache": {
          "$ref": "#/definitions/CacheConfig"
        }
      },
      "required": [
        "driver",
        "config",
        "constants",
        "cache"
      ],
      "additionalProperties": false
    },
    "DynamoDBConfig": {
      "type": "object",
      "properties": {
        "region": {
          "type": "string"
        },
        "prefix": {
          "type": "string"
        },
        "maxRetries": {
          "type": "number"
        },
        "allowedRetryErrorCodes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "endpoint": {
          "type": "string"
        },
        "retryAfter": {
          "type": "number"
        },
        "waitTimeAfterTableCreation": {
          "type": "number"
        }
      },
      "required": [
        "region",
        "prefix",
        "maxRetries",
        "allowedRetryErrorCodes",
        "retryAfter",
        "waitTimeAfterTableCreation"
      ],
      "additionalProperties": false
    },
    "CacheConfig": {
      "type": "object",
      "properties": {
        "driver": {
          "type": "string",
          "const": "redis"
        },
        "config": {
          "$ref": "#/definitions/RedisCacheDriverConfig"
        }
      },
      "required": [
        "driver",
        "config"
      ],
      "additionalProperties": false
    },
    "RedisCacheDriverConfig": {
      "type": "object",
      "properties": {
        "driverName": {
          "type": "string"
        },
        "host": {
          "type": "string"
        },
        "port": {
          "type": "number"
        },
        "prefix": {
          "type": "string"
        },
        "cacheType": {
          "type": "string",
          "enum": [
            "single",
            "cluster"
          ]
        },
        "databaseNumber": {
          "type": "number"
        },
        "slotsRefreshTimeout": {
          "type": "number"
        }
      },
      "required": [
        "driverName",
        "host",
        "port",
        "prefix",
        "cacheType",
        "databaseNumber",
        "slotsRefreshTimeout"
      ],
      "additionalProperties": false
    },
    "APIConfig": {
      "type": "object",
      "properties": {
        "virtualsCacheRecheckInterval": {
          "type": "number"
        },
        "virtualsCacheTimeout": {
          "type": "number"
        }
      },
      "required": [
        "virtualsCacheRecheckInterval",
        "virtualsCacheTimeout"
      ],
      "additionalProperties": false
    },
    "AppLocale": {
      "type": "string",
      "enum": [
        "ar",
        "en"
      ]
    },
    "QueueConfig": {
      "type": "object",
      "properties": {
        "driver": {
          "type": "string",
          "const": "kafka"
        },
        "config": {
          "$ref": "#/definitions/QueueKafkaConfig"
        }
      },
      "required": [
        "driver",
        "config"
      ],
      "additionalProperties": false
    },
    "QueueKafkaConfig": {
      "type": "object",
      "properties": {
        "brokers": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "canProduce": {
          "type": "boolean"
        },
        "canConsume": {
          "type": "boolean"
        },
        "groupId": {
          "type": "string"
        },
        "topics": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/QueueKafkaTopicConfig"
          }
        }
      },
      "required": [
        "brokers",
        "canProduce",
        "canConsume",
        "topics"
      ],
      "additionalProperties": false
    },
    "QueueKafkaTopicConfig": {
      "type": "object",
      "properties": {
        "use": {
          "$ref": "#/definitions/QueueKafkaTopicUse"
        },
        "name": {
          "type": "string"
        }
      },
      "required": [
        "use",
        "name"
      ],
      "additionalProperties": false
    },
    "QueueKafkaTopicUse": {
      "type": "string",
      "enum": [
        "pushing",
        "events"
      ]
    },
    "SyncConfig": {
      "type": "object",
      "properties": {
        "driver": {
          "type": "string",
          "const": "elasticsearch"
        },
        "config": {
          "$ref": "#/definitions/ElasticSearchSyncConfig"
        }
      },
      "required": [
        "driver",
        "config"
      ],
      "additionalProperties": false
    },
    "ElasticSearchSyncConfig": {
      "type": "object",
      "properties": {
        "numberOfShards": {
          "type": "number"
        },
        "numberOfReplicas": {
          "type": "number"
        },
        "node": {
          "type": "string"
        },
        "prefix": {
          "type": "string"
        }
      },
      "required": [
        "numberOfShards",
        "numberOfReplicas",
        "node",
        "prefix"
      ],
      "additionalProperties": false
    },
    "SearchConfig": {
      "type": "object",
      "properties": {
        "driver": {
          "type": "string",
          "const": "elasticsearch"
        },
        "config": {
          "$ref": "#/definitions/ElasticSearchSearchConfig"
        }
      },
      "required": [
        "driver",
        "config"
      ],
      "additionalProperties": false
    },
    "ElasticSearchSearchConfig": {
      "type": "object",
      "properties": {
        "node": {
          "type": "string"
        },
        "prefix": {
          "type": "string"
        }
      },
      "required": [
        "node",
        "prefix"
      ],
      "additionalProperties": false
    },
    "TwilioConfig": {
      "type": "object",
      "properties": {
        "accountSid": {
          "type": "string"
        },
        "authToken": {
          "type": "string"
        },
        "verificationService": {
          "type": "string"
        }
      },
      "required": [
        "accountSid",
        "authToken",
        "verificationService"
      ],
      "additionalProperties": false
    }
  }
}