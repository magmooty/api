{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/AppConfig",
  "definitions": {
    "AppConfig": {
      "type": "object",
      "properties": {
        "$schema": {
          "type": "string"
        },
        "server": {
          "type": "object",
          "properties": {
            "port": {
              "type": "number"
            }
          },
          "required": [
            "port"
          ],
          "additionalProperties": false
        },
        "auth": {
          "type": "object",
          "properties": {
            "driver": {
              "type": "string",
              "const": "native"
            },
            "config": {
              "$ref": "#/definitions/NativeAuthDriverConfig"
            }
          },
          "required": [
            "driver",
            "config"
          ],
          "additionalProperties": false
        },
        "persistence": {
          "$ref": "#/definitions/PersistenceConfig"
        },
        "i18n": {
          "type": "object",
          "properties": {
            "defaultLocale": {
              "$ref": "#/definitions/AppLocale"
            },
            "locales": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/AppLocale"
              }
            }
          },
          "required": [
            "defaultLocale",
            "locales"
          ],
          "additionalProperties": false
        },
        "queue": {
          "$ref": "#/definitions/QueueConfig"
        },
        "sync": {
          "$ref": "#/definitions/SyncConfig"
        },
        "search": {
          "$ref": "#/definitions/SearchConfig"
        }
      },
      "required": [
        "server",
        "auth",
        "persistence",
        "i18n",
        "queue",
        "sync",
        "search"
      ],
      "additionalProperties": false
    },
    "NativeAuthDriverConfig": {
      "type": "object",
      "properties": {
        "sessionTTL": {
          "type": "number"
        }
      },
      "required": [
        "sessionTTL"
      ],
      "additionalProperties": false
    },
    "PersistenceConfig": {
      "type": "object",
      "properties": {
        "driver": {
          "type": "string",
          "const": "dynamodb"
        },
        "config": {
          "$ref": "#/definitions/DynamoDBConfig"
        },
        "cache": {
          "type": "object",
          "properties": {
            "driver": {
              "type": "string",
              "const": "redis"
            },
            "config": {
              "type": "object",
              "properties": {
                "host": {
                  "type": "string"
                },
                "port": {
                  "type": "number"
                },
                "prefix": {
                  "type": "string"
                }
              },
              "required": [
                "host",
                "port",
                "prefix"
              ],
              "additionalProperties": false
            }
          },
          "required": [
            "driver",
            "config"
          ],
          "additionalProperties": false
        }
      },
      "required": [
        "driver",
        "config",
        "cache"
      ],
      "additionalProperties": false
    },
    "DynamoDBConfig": {
      "type": "object",
      "properties": {
        "region": {
          "type": "string"
        },
        "prefix": {
          "type": "string"
        },
        "maxRetries": {
          "type": "number"
        },
        "allowedRetryErrorCodes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "endpoint": {
          "type": "string"
        },
        "retryAfter": {
          "type": "number"
        },
        "waitTimeAfterTableCreation": {
          "type": "number"
        }
      },
      "required": [
        "region",
        "prefix",
        "maxRetries",
        "allowedRetryErrorCodes",
        "retryAfter",
        "waitTimeAfterTableCreation"
      ],
      "additionalProperties": false
    },
    "AppLocale": {
      "type": "string",
      "enum": [
        "ar",
        "en"
      ]
    },
    "QueueConfig": {
      "type": "object",
      "properties": {
        "driver": {
          "type": "string",
          "const": "kafka"
        },
        "config": {
          "$ref": "#/definitions/QueueKafkaConfig"
        }
      },
      "required": [
        "driver",
        "config"
      ],
      "additionalProperties": false
    },
    "QueueKafkaConfig": {
      "type": "object",
      "properties": {
        "brokers": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "canProduce": {
          "type": "boolean"
        },
        "canConsume": {
          "type": "boolean"
        },
        "groupId": {
          "type": "string"
        },
        "topics": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/QueueKafkaTopicConfig"
          }
        }
      },
      "required": [
        "brokers",
        "canProduce",
        "canConsume",
        "topics"
      ],
      "additionalProperties": false
    },
    "QueueKafkaTopicConfig": {
      "type": "object",
      "properties": {
        "use": {
          "$ref": "#/definitions/QueueKafkaTopicUse"
        },
        "name": {
          "type": "string"
        }
      },
      "required": [
        "use",
        "name"
      ],
      "additionalProperties": false
    },
    "QueueKafkaTopicUse": {
      "type": "string",
      "enum": [
        "pushing",
        "events"
      ]
    },
    "SyncConfig": {
      "type": "object",
      "properties": {
        "driver": {
          "type": "string",
          "const": "elasticsearch"
        },
        "config": {
          "$ref": "#/definitions/ElasticSearchSyncConfig"
        }
      },
      "required": [
        "driver",
        "config"
      ],
      "additionalProperties": false
    },
    "ElasticSearchSyncConfig": {
      "type": "object",
      "properties": {
        "numberOfShards": {
          "type": "number"
        },
        "numberOfReplicas": {
          "type": "number"
        },
        "node": {
          "type": "string"
        },
        "prefix": {
          "type": "string"
        }
      },
      "required": [
        "numberOfShards",
        "numberOfReplicas",
        "node",
        "prefix"
      ],
      "additionalProperties": false
    },
    "SearchConfig": {
      "type": "object",
      "properties": {
        "driver": {
          "type": "string",
          "const": "elasticsearch"
        },
        "config": {
          "$ref": "#/definitions/ElasticSearchSearchConfig"
        }
      },
      "required": [
        "driver",
        "config"
      ],
      "additionalProperties": false
    },
    "ElasticSearchSearchConfig": {
      "type": "object",
      "properties": {
        "node": {
          "type": "string"
        },
        "prefix": {
          "type": "string"
        }
      },
      "required": [
        "node",
        "prefix"
      ],
      "additionalProperties": false
    }
  }
}